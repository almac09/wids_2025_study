{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Increase HTTP Buffer Size",
            "type": "shell",
            "command": "git config --global http.postBuffer 524288000; Start-Sleep -Seconds 5; Exit",
            "problemMatcher": [],
            "runOptions": {
                "runOn": "folderOpen"
            },
            "options": {
                "shell": {
                    "executable": "powershell",
                    "args": ["-NoExit", "-Command"]
                }
            }
        }
    ]
}
